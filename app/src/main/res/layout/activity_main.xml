<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/date_and_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth_regular"
            android:textSize="32.00dp"
            android:textColor="?defaultTextColor"
            android:text="@string/timeHolder"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth_regular"
            android:textSize="18.00dp"
            android:textColor="?defaultTextColor"
            android:text="@string/dateHolder"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <include android:id="@+id/stepcounter"
        android:layout_width="match_parent"
        android:layout_height="98.33dp"
        layout="@layout/component_stepcounter"
        android:layout_marginTop="20.33dp"
        android:layout_marginHorizontal="13.33dp"
        app:layout_constraintTop_toBottomOf="@id/date_and_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="66.67dp"
        layout="@layout/component_navbar"
        android:layout_marginHorizontal="13.33dp"
        android:layout_marginBottom="20.67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>