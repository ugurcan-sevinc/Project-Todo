<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="13.33dp"
    android:layout_marginVertical="20.33dp"
    android:background="@drawable/component_mainpage_widget_background"
    android:elevation="1dp">

    <LinearLayout
        android:id="@+id/swapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/todayTasks"
                android:fontFamily="@font/amaranth_regular"
                android:textColor="?widgetDefaultTextColor"
                android:textSize="16dp"
                android:layout_marginVertical="18.33dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopList"
                android:fontFamily="@font/amaranth_regular"
                android:textColor="?widgetDefaultTextColor"
                android:textSize="16dp"
                android:layout_marginVertical="18.33dp"/>

        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lineLayout"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/swapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?widgetLineDefaultColor">

        <View
            android:id="@+id/selectedLine"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:background="?widgetLineSelectedColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:background="?widgetInnerContainerBackgroundColor"
        app:layout_constraintTop_toBottomOf="@id/lineLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/todayTasks"
                android:fontFamily="@font/amaranth_regular"
                android:textSize="20dp"
                android:layout_marginTop="24dp"
                android:textColor="?widgetDefaultTextColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dateHolder"
                android:fontFamily="@font/amaranth_regular"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="24dp"
                android:textColor="?widgetDateTextColor"/>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>